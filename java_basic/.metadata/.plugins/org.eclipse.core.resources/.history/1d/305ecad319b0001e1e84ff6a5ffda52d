package chapter3.operator;

public class OperationEx3 {
	public static void main(String[] args) {
		// 논리연산자, && || !
		int num1 = 10;
		int i = 2;
		
		// num1에 10을 더한 값이 10보다 큰지, 그리고 i에 2를 더한 값이 10보다 큰 것을 비교
		// 1 F & 2 F = False
		// 1 T & 2 F = False
		// 1 T & 2 T = True
		//						1						2
		boolean value = (num1 = num1 + 10) < 10 && (i = i + 2) < 10;
		// 좌측이 false이면 우측 true or false에 상관없이 결과는 false되는 구조이므로
		// 우측은 코드가 실행되지 않는다.
		
		System.out.println(value); // F & T = False
		System.out.println(num1); // 20
		System.out.println(i); // 2, boolean에서 && 앞의 num의 값이 False라서 뒤의 값이 실행되지 않았다
	}
}
