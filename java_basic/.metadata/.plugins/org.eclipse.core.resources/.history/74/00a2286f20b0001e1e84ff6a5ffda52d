package chapter4.ifexample;

public class IfExample {
	public static void main(String[] args) {
		// 제어문 : if 구문
		
		boolean isMarried = true;
		
		// 조건식이 true이면 11번줄이 실행이 되고, false이면 실행되지 않는다.
		if(isMarried) {
			System.out.println("기혼입니다.");
		}
		
		boolean isEven;
		int num = 10;
		isEven = (num % 2 == 0) ? true : false;
		
		
	}
}
